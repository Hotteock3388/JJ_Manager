<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".di.app.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JubJub_Manager"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        
        <activity
            android:name=".ui.modify_equipment.add_equipment.AddEquipmentComposeActivity"
            android:exported="false"
            android:label="@string/title_activity_add_equipment_compose"
            android:theme="@style/Theme.JubJub_Manager" />

        <activity
            android:name=".ui.modify_equipment.edit_equipment.EditEquipmentComposeActivity"
            android:exported="false"
            android:label="@string/title_activity_add_equipment_compose"
            android:theme="@style/Theme.JubJub_Manager" />

        <activity
            android:name=".ui.main.MainComposeActivity"
            android:exported="false"
            android:label="@string/title_activity_main_compose"
            android:theme="@style/Theme.JubJub_Manager" />

        <activity
            android:name=".ui.sign_in.SignInComposeActivity"
            android:exported="true"
            android:label="@string/title_activity_sign_in_compose"
            android:theme="@style/Theme.JubJub_Manager">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>