<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fr"
            type="com.depotato.jubjub_manager.view.my_page.MyPageFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".view.my_page.MyPageFragment">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_main_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline11" />

        <TextView style="@style/MyPageTitle"
            android:text="마이페이지"
            android:elevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline12" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/textView"
            style="@style/MyPageItem"
            android:text="기자재 추가"
            android:onClick="@{() -> fr.openAddEquipmentActivity()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline13" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/MyPageItem"
            android:text="로그아웃"
            android:onClick="@{() -> fr.logOut()}"
            android:textColor="@color/red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


        <ImageView style="@style/MyPageBGImageView"
            android:src="@drawable/ic_cl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline14"
            app:layout_constraintVertical_bias="0" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline11"
            style="@style/GuideLine_Horizontal"
            app:layout_constraintGuide_percent="0.021" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline12"
            style="@style/GuideLine_Horizontal"
            app:layout_constraintGuide_percent="0.076" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline13"
            style="@style/GuideLine_Horizontal"
            app:layout_constraintGuide_percent="0.185" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline14"
            style="@style/GuideLine_Horizontal"
            app:layout_constraintGuide_percent="0.685" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

