<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EquipmentInfoTitle" parent="TextView_Blue">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/notosanskr_bold</item>
        <item name="android:layout_marginTop">26dp</item>
    </style>

    <style name="EquipmentInfoContents" parent="EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">9dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:fontFamily">@font/notosanskr_medium</item>
    </style>

    <style name="AddEquipmentButton" parent="Button_b_20">
        <item name="android:layout_width">83dp</item>
        <item name="android:layout_height">39dp</item>
    </style>
    
    <style name="AddImageButton">
        <item name="android:layout_width">86dp</item>
        <item name="android:layout_height">86dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/ic_add_image_transparent</item>
        <item name="android:background">@drawable/bg_add_image</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Dp" parent="">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="DeleteImageButton">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/ic_close</item>
        <item name="android:background">@drawable/bg_delete_image</item>
    </style>

    <style name="CategorySpinner" parent="android:Widget.Material.Spinner.Underlined">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_margin">9dp</item>
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:popupBackground">@drawable/bg_spinner_item</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:overlapAnchor">false</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="CategorySpinnerItem" parent="TextView_Black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingStart">9dp</item>
        <item name="android:textSize">9dp</item>
        <item name="android:text">기자재 카테고리</item>
        <item name="android:fontFamily">@font/notosanskr_regular</item>

    </style>

</resources>