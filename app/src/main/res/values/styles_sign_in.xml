<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SignInText" parent="TextView_Black">
        <item name="android:textSize">22dp</item>
        <item name="android:fontFamily">@font/notosanskr_light</item>
        <item name="android:text">Sign In</item>
    </style>
    
    <style name="EditTextTitle" parent="TextView_Blue">
        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/notosanskr_medium</item>
    </style>

    <style name="EditText_SignIn" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingStart">2dp</item>
        <item name="android:paddingTop">7.5dp</item>
        <item name="android:paddingBottom">7.5dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HorizontalLine_Blue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:background">@color/main_blue</item>
    </style>

    <style name="Button_SignIn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_button_sign_in</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/notosanskr_medium</item>
        <item name="android:textSize">14dp</item>
    </style>

</resources>