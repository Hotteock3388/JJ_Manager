<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EquipmentInfoImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:src">@drawable/ic_add_image</item>
    </style>

    <style name="EquipmentInfoName" parent="TextView_Blue">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/notosanskr_bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="EquipmentInfoCategory" parent="TextView_Blue_W_Shadow">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:fontFamily">@font/notosanskr_regular</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="EquipmentInfoAmount" parent="TextView_Blue_W_Shadow">
        <item name="android:fontFamily">@font/notosanskr_medium</item>
        <item name="android:text">수량 : 0/5개</item>
        <item name="android:textSize">10dp</item>
        <item name="android:background">@drawable/bg_chip</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="EquipmentEditButton" parent="Button_b_10">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">50dp</item>

    </style>

